include ../BaseMenuView/BaseMenuHeader.pug

form.loginForm(name="registerForm")
    table.alignCenter
        tbody
            tr
                th
                    label.info Email:
                th
                    input(type="text" value="" name="registerEmailInput").flatLightGray
                th
                    label.error(id="registerEmailError")
            tr
                th
                    label.info Login:
                th
                    input(type="text" value="" name="registerLoginInput").flatLightGray
                th
                    label.error(id="registerLoginError")
            tr
                th
                    label.info Password:
                th
                    input(type="password" value="" name="registerPasswordInput").flatLightGray
                th
                    label.error(id="registerPasswordError")
            tr
                th
                    label.info Repeat Password:
                th
                    input(type="password" value="" name="registerRepeatPasswordInput").flatLightGray
                th
                    label.error(id="registerRepeatPasswordError")
            tr
                th(colspan=3)
                    input(type="submit" value="Register" name="registerSubmit").alignCenter.submitButton

include ../BaseMenuView/BaseMenuFoot.pug
